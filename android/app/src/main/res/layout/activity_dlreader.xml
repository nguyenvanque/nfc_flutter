<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppLayout">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="免許証をタッチして読み取ります。暗証番号2は省略できます、その場合顔写真と本籍は表示されません。"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/text_dl_pin1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="暗証番号1(4桁、必須)"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/edit_dl_pin1"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:textSize="20sp"
                style="@style/edt"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:hint="@null"
                tools:ignore="Autofill" />
            <TextView
                android:id="@+id/text_dl_pin2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="暗証番号2(4桁、任意)"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/edit_dl_pin2"
                style="@style/edt"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:textSize="20sp"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:hint="@null"
                tools:ignore="Autofill" />


        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp" />
    </ScrollView>
    <ScrollView
        android:id="@+id/scrollS"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/message2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp" />
    </ScrollView>
</LinearLayout>

